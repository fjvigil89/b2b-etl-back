{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "outDir": "./dist",
    "noImplicitAny": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [
      "node",
      "express-jwt",
      "passport",
      "mocha",
      "chai",
      "multer"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "typings",
    "**/__tests/*.ts"
  ],
  "files": [
    "src/interfaces/type.d.ts"
  ]
}